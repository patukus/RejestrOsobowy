<UserControl x:Class="RejestrOsobowy.AppWPF.Views.MainViews.MainHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RejestrOsobowy.AppWPF.Views.MainViews"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SeedDatabaseButton" Grid.Row="1" Style="{DynamicResource ButtonAdd}" Content="Zasiej bazę danych" FontSize="{Binding vm.mainProgram._MyFontSize.M}" Margin="5" Click="SeedDatabaseButton_Click"/>
            <Button x:Name="AddPersonButton" Grid.Row="1" Style="{DynamicResource ButtonAdd}" Content="Dodaj Osobę" FontSize="{Binding vm.mainProgram._MyFontSize.M}" Margin="5" Click="AddPersonButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
